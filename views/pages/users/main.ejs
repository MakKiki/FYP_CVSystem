<div class="py-4"></div>

<!-- if the user has no CV -->
<% if(cv=='' ){ %>
  <div class="container my-5">
    <div class="text-center mb-7">
      <div class="row justify-content-center">

        <div class="col-lg-10 col-md-9 col-sm-12">
          <!-- Message -->
          <h1>You haven't had any CV üôÅ</h1>
          <h1 class="py-4">Create your own <span style="color: deeppink;">3D CV</span> by just FOUR steps.</h1>
          <div class="py-2"></div>
          <!-- End of Message -->

          <!-- Create button -->
          <button class="btn main-create-btn" onclick="window.location.href='/editCV/null'">Start Creating</button>
          <div class="py-3"></div>
          <!-- End of Create button -->

          <img class="d-none d-sm-inline" src="/images/develop_main_pic2.svg" style="width: 90%; height: 50%;" />
        </div>

      </div>
    </div>
  </div>
  <% } else { %>

    <!-- if the user has CV -->
    <div class="container">

      <!-- heading -->
      <span class="h1">My CV</span>

      <!-- Create button -->
      <button type="btn" class="btn main-create-btn" style="float: right; height: 50px; width: 180px;"
        onclick="window.location.href='/editCV/null'">+ Create New
        CV</button>
      <!-- End of create button -->

      <hr class="sidebar-divider">
      <div class="py-2"></div>
      <!-- end of heading -->


      <div class="row">
        <!-- Loop the cv for shown -->
        <% var i=0; cv.forEach( function(model) { i++;%>
          <div class="col-lg-6 col-md-12 col-sm-12">

            <div class="row">
              <!-- Resume content -->
              <div class="col-lg-6 col-md-6 col-sm-12 card shadow" style="height: 400px">
                <div class="py-2"></div>

                <div class="row" style="color: #a570a7">

                  <!-- resume no. -->
                  <div class="col-sm-12 py-3">
                    <h5 class="text-center">Resume <%=i%>
                    </h5>
                  </div>

                   <!-- id -->
                   <div class="col-sm-12 py-3 ml-2">
                    <span>ID: <%=model.id%></span>
                  </div>

                  <!-- status -->
                  <div class="col-sm-12 py-3 ml-2">
                    Status: <% if(model.status !='finish' ) { %>Progressing - <span style="text-transform: uppercase;">
                        <%=model.step%>
                      </span>
                      <% }else{ %>Finish<% } %>
                  </div>

                  <!-- job area -->
                  <div class="col-sm-12 py-3 ml-2">
                    <span>Job Area: <%=model.jobArea%></span>
                  </div>

                  <!-- targeted occupation -->
                  <div class="col-sm-12 py-3 ml-2">
                    <span>Targeted Occupation: <%=model.occupation%></span>
                  </div>

                </div>
              </div>
              <!-- End of Resume content -->

              <!-- Manage the CV -->
              <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="row">

                  <!-- Continue / Edit Button -->
                  <div class="col-sm-12 py-1">
                    <a class="btn main-btn" href='/editCV/<%= model.id %>'>
                      <svg width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16"
                        class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path
                          d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd"
                          d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                      </svg>
                      <% if (model.step !='finish' ) { %><span class="ml-1">Continue</span>
                        <% } else { %><span class="ml-1">Edit</span>
                          <% } %>
                    </a>
                  </div>
                  <!-- End of Continue / Edit Button -->

                  <!-- Delete Button -->
                  <div class="col-sm-12 py-1">
                    <button id="deleteCVBtn" type="button" class="btn main-btn" onclick="showDeleteAlert('<%=model.id%>')">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-trash" viewBox="0 0 16 16">
                        <path
                          d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                        <path fill-rule="evenodd"
                          d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                      </svg>
                      <span class="ml-1">Delete</span>
                    </button>
                  </div>
                  <!-- End of Delete Button -->

                  <!-- Delete Modal-->
                  <div class="animate__animated animate__fadeIn center" style="display:none; z-index: 1;"
                    id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Confirm to Delete?</h5>
                        </div>
                        <div class="modal-body">Once you delete your CV, you cannot retrieve it back.</div>
                        <div class="modal-footer">
                          <button id="alert-cancel" class="btn btn-secondary" type="button" onclick="showDeleteAlert('<%=model.id%>')"
                            data-dismiss="modal">Cancel</button>
                          <button id="alert-delete" class="btn btn-danger" type="button"
                            onclick="deleteCV()" data-dismiss="modal">Delete</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- End of Delete Modal -->

                  <!-- Publish link -->
                  <div class="col-sm-12 py-1">
                    <div style="padding: 12px 12px">
                      <span class="main-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                          class="bi bi-link-45deg" viewBox="0 0 16 16">
                          <path
                            d="M4.715 6.542L3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1.001 1.001 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4.018 4.018 0 0 1-.128-1.287z" />
                          <path
                            d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 0 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 0 0-4.243-4.243L6.586 4.672z" />
                        </svg>
                        Publicated Link</span>
                      <br>
                      <% if (model.CVlink=='' ){ %>
                        <div style="font-size:small">You have not published this CV yet.</div>
                        <% } else{ %>
                          <button class="CVlink-btn" onclick="window.open('/CV/<%= model.id %>')">
                            <%= model.CVlink %>
                          </button>
                          <% } %>
                    </div>
                  </div>
                  <!-- End of Publish link -->

                  <!-- Updated date -->
                  <div class="col-sm-12 py-1">
                    <div style="padding: 0px 12px">
                      <div class="main-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                          class="bi bi-calendar2-event" viewBox="0 0 16 16">
                          <path
                            d="M11 7.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z" />
                          <path
                            d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM2 2a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H2z" />
                          <path
                            d="M2.5 4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5V4z" />
                        </svg>
                        <span class="ml-1">Updated At </span>
                      </div>
                      <div style="font-size:small"> The recent updated date is
                        <%= new Date(model.updatedAt).toLocaleDateString()%> at <%=new
                            Date(model.updatedAt).toLocaleTimeString()%>.
                      </div>
                    </div>
                  </div>
                  <!-- End of Updated date -->

                </div>
              </div>
              <!-- End of manage CV -->
            </div>

            <div class="py-4"></div>
          </div>

          <% }); %>
            <!-- End of the loop -->


            <!-- Add new CV -->
            <div class="col-lg-6 col-sm-12">

              <div class="row">
                <div class="col-lg-6 col-sm-12 card shadow" style="height: 400px">
                  <button type="button" class="btn main-btn" onclick="window.location.href='/editCV/null'">
                    <h4 class="text-center" style="margin-top: 170px;"><b>+ Create New CV</b></h4>
                  </button>
                </div>

              </div>
              <div class="py-4"></div>
            </div>
            <!-- End of create new CV -->

      </div>
    </div>
    </div>
    <% } %>




      <script>
        ///////for showing delete alert
        function showDeleteAlert(id) {  
          var deleteAlert = document.getElementById('deleteModal');
          if (deleteAlert.style.display == '') {
            document.getElementById('deleteCVBtn').value = '';
            deleteAlert.style.display = 'none';
          } else {
            document.getElementById('deleteCVBtn').value = id;
            deleteAlert.style.display = '';
          }
        }
        ///////

        /////// for delete user's CV
        async function deleteCV() {
          var id = document.getElementById('deleteCVBtn').value;
          var response = await fetch("/deleteCV/" + id, {
            method: "DELETE",
            credentials: 'same-origin',
          });

          if (response.ok) {
            var data = await response.json();
            alert(data.message)
            window.location = data.url;
          } else {
            alert(response.statusText);
          }
        }
    ////////
      </script>