<div class="header py-7 py-lg-8">
  <div class="py-4"></div>

  <!-- if the user has no CV -->
  <% if(req.session.CV=='' ){ %>
    <!-- Message -->
    <div class="container my-5">
      <div class="header-body text-center mb-7">
        <div class="row justify-content-center">
          <div class="col-xl-10 col-lg-12 col-md-9">
            <h1>You haven't had any CV üôÅ</h1>
            <h1 class="py-4">Create your own <span style="color: deeppink;">3D CV</span> by just FOUR steps.</h1>
            <div class="py-2"></div>
            <button class="btn main-create-btn" onclick="location.href='/input';">Start Creating</button>
            <div class="py-3"></div>
            <img src="/images/develop_main_pic2.svg" style="width: 90%; height: 50%;" />
          </div>
        </div>
      </div>
    </div>
    <% } else { %>

      <!-- if the user has CV -->
      <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
          <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 py-3">
              <div class="row">

                <!-- Left part of the card -->
                <div class="col-lg-6 d-none d-lg-block">
                  <img src="/images/resume.svg" style="width: 90%; height: 90%;" />
                </div>

                <!-- Right part of the card -->
                <div class="col-lg-6 py-5">
                  <!-- Edit -->
                  <button class="btn main-btn" onclick="window.location.href='/customize'">
                    Edit
                  </button>
                  <br>
                  <!-- Delete -->
                  <button class="btn main-btn py-5" onclick="deleteCV()">
                    Delete
                  </button>
                  <!-- Publish link -->
                  <div class="py-4" style="padding: 12px 12px">
                    <span class="main-btn">Publicated link of your CV</span>
                    <br>
                    <% if (req.session.link=='' ){ %>
                      <p class="py-2">You have not published your CV yet.</p>
                      <% } else{ %>
                        <button type="button" class="btn btn-link" onclick="goToCVPage()">
                          <%= req.session.link %>
                        </button>
                        <% } %>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
</div>
<% } %>

  </div>




