<!-- Content Wrapper-->
<div id="content-wrapper">
    <!-- color selection for the template -->
    <div class="row py-2">
        <div class="col-sm-3">
            <div class="custom-control custom-radio">
                <span style="color:#81828b;"><b>Webpage Background Color</b></span>
                <select class="form-control" id="background" name="" value="" onchange="changeBackground(this.value)">
                    <option value="Original">Original</option>
                    <option value="bg-gradient-light">Light</option>
                    <option value="bg-gradient-dark">Dark</option>
                    <option value="bg-gradient-pink">Pink</option>
                    <option value="bg-gradient-purple">Purple</option>
                    <option value="bg-gradient-danger">Red</option>
                    <option value="bg-gradient-primary">Blue</option>
                    <option value="bg-gradient-warning">Yellow</option>
                </select>
            </div>
        </div>


        <div class="col-sm-3">
            <div class="custom-control custom-radio">
                <span style="color: #81828b;"><b>Theme Color</b></span>
                <select class="form-control" id="textColor" name="" value="" onchange="changeColor(this.value)">
                    <option value="navy/rgb(0, 4, 255)/#4e73df/blue">Blue</option>
                    <option value="rgb(196, 65, 95)/mediumvioletred/rgb(235, 155, 182)/pink">Pink</option>
                    <option value="rgb(112, 0, 97)/#9954ad/#a570a7/purple">Purple</option>
                    <option value="rgb(206, 65, 0)/#ff5100/#df7f31/orange">Orange</option>
                    <option value="rgb(1, 80, 45)/#027c45/#4fb487/green">Green</option>
                </select>
            </div>
        </div>

        <div class="col-sm-3">
            <br>
            <button type="button" class="btn pink-btn" onclick="submitCV()">I want to choose this template</button>
        </div>
    </div>
    <!-- end of the color selection -->
    <div class="py-3"></div>

    <!-- Content -->
    <div id="content" class="container-fluid container">

                <!-- innerHTML for CV -->
                <div id="CVbody">
                    <!-- for storing background color of the web page -->
                    <input type="hidden" id="webpageColor" style="background-color: rgb(248, 248, 248);"></input>
                    <input type="hidden" id="darkerColor" value="navy"></input>
                    <input type="hidden" id="themeColor" style="color: #4e73df"></input>
                    <input type="hidden" id="progressCirColor" value="blue"></input>

                    <div class="cotainer">
                        <div class="row">

                            <!-- Fieldbar -->
                            <div class="col-sm-2">
                                <ul id="fieldbar" class="ul-noBullet py-3">
                                    <!-- Basic Info Button -->
                                    <li id="Basic Informationbtn" class="nav-item mx-1 py-1">
                                        <button type="button" value="Basic Information" class="btn content-btn fieldbar"
                                            onclick="showContent(this.value)">
                                            <b class="darkerColor" style="color: navy">Basic Information</b>
                                        </button>
                                    </li>

                                    <!-- Education Button -->
                                    <li id="Educationbtn" class="nav-item mx-1 py-1">
                                        <button type="button" value="Education" class="btn content-btn fieldbar"
                                            onclick="showContent(this.value)">
                                            <b class="darkerColor" style="color: navy">Education</b>
                                        </button>
                                    </li>

                                    <!-- Work experience -->
                                    <% if(cv.company !='' ) { %>
                                        <li id="Work Experiencebtn" class="nav-item mx-1 py-1">
                                            <button type="button" value="Work Experience"
                                                class="btn content-btn fieldbar" onclick="showContent(this.value)">
                                                <b class="darkerColor" style="color: navy">Work Experience</b>
                                            </button>
                                        </li>
                                        <% } %>

                                            <!-- Skill -->
                                            <% if(cv.codingSkill !='' || cv.typingSkill !='' || cv.softwareSkill !='' )
                                                { %>
                                                <li id="Skillbtn" class="nav-item mx-1 py-1">
                                                    <button type="button" value="Skill" class="btn content-btn fieldbar"
                                                        onclick="showContent(this.value)">
                                                        <b class="darkerColor" style="color: navy">Skill</b>
                                                    </button>
                                                </li>
                                                <% } %>

                                                    <!-- Language -->
                                                    <li id="Languagebtn" class="nav-item mx-1 py-1">
                                                        <button type="button" value="Language"
                                                            class="btn content-btn fieldbar"
                                                            onclick="showContent(this.value)">
                                                            <b class="darkerColor" style="color: navy">Language</b>
                                                        </button>
                                                    </li>
                                </ul>
                            </div>
                            <!-- End of Fieldbar -->


                            <!-- Profile image -->
                            <div class="col-sm-3">
                                <div class="card resize-only" style="min-height: 400px;">
                                <% if (cv.profile !='' ){ %>
                                    <img class="rounded-lg resize-drag field" style="height: 450px;"
                                        src='<%= cv.profile %>'>
                                    <% } else { if (cv.sex=='Male' ) {%>
