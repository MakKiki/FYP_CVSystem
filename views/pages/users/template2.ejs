    function changeBackground(newBackground) {
        if (newBackground == "Original") {
            document.getElementById('webpageColor').setAttribute("class", "");
            document.body.setAttribute("class", "");
            document.getElementById('webpageColor').style.backgroundColor = rgb(248, 248, 248);
            document.body.style.backgroundColor = rgb(248, 248, 248);
