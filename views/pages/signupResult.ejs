<div class="py-7 py-lg-8">
    <div class="py-5"></div>

    <% if (result=="success" ) { %>
        <!-- Thank you message -->
        <div class="container py-2">
            <div class="text-center mb-7">
                <div class="row justify-content-center">
                    <div class="col-xl-10 col-lg-12 col-md-9">
                        <h5 class="text-lead text-light">You have sucessfully created your own account.
                        </h5>
                        <div class="py-3"></div>
                        <h1 class="text-white">✨ Thank you for your registration!! ✨</h1>
                    </div>
                </div>
            </div>
        </div>
        <!-- Thank you picture -->
        <div class="container">
            <div class="py-4"></div>
            <div class="row justify-content-center">
                <div>
                    <img src="/images/signup_success_pic.svg" style="width: 100%; height: 80%;" />
                </div>
            </div>
        </div>

        <% } if (result=="fail" ) {%>
            <!-- Fail message -->
            <div class="container py-2">
                <div class="text-center mb-7">
                    <div class="row justify-content-center">
                        <div class="col-xl-10 col-lg-12 col-md-9">
                            <h1 class="text-lead text-light">⚠️ The email has been registered. ⚠️
                            </h1>
                            <div class="py-4">
                                <h5 class="text-white">Please try another email for registration again.</h5>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Fail picture -->
                <div class="container">
                    <div class="py-4"></div>
                    <div class="row justify-content-center">
                        <div class="row justify-content-center">
                            <img src="/images/signup_fail_pic.svg" style="width: 80%; height: 80%;" />
                        </div>
                    </div>
                </div>
                <% } %>
            </div>


<script>
    ////////set background color
    window.onload = function () {
        document.body.classList.add('signup-bg');
    }
    ////////
</script>