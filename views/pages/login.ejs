<div class="py-5"></div>

<!-- Welcome message -->
<div class="container animate__animated animate__fadeInDown">
  <div class="text-center mb-7">
    <div class="row justify-content-center">
      <div class="col-xl-10 col-md-9 col-sm-12">
        <h1 class="text-white">Welcome To 3D CV System!</h1>
        <br>
        <p class="text-light">Let's start creating your own 3D CV using this system for free now.</p>
      </div>
    </div>
  </div>
</div>
<!-- End of welcome message -->


<!-- Main content -->
<div class="container">
  <div class="row justify-content-center">

    <!-- login card -->
    <div class="col-lg-10 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">

          <div class="row">

            <!-- Left part of the card -->
            <div class="col-lg-6 d-none d-lg-block">
              <img src="/images/login_pic.svg" style="width: 100%; height: 100%;" />
            </div>
            <!-- End of left part -->

            <!-- Right part of the card -->
            <div class="col-lg-6">
              <div class="p-5">

                <!-- message -->
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Login</h1>
                </div>
                <div class="py-2"></div>
                <!-- End of message -->

                <!-- login info -->
                <form class="user" action="/login" method="POST" onsubmit="submitForm(this);return false">
                  <div class="form-group">
                    <input type="email" name="email" class="form-control form-control-user" placeholder="Email Address">
                  </div>
                  <div class="form-group">
                    <input type="password" name="password" class="form-control form-control-user"
                      placeholder="Password">
                  </div>
                  <br>
                  <button type="submit" class="btn login-btn btn-block">
                    Login
                  </button>
                </form>
                <!-- End of login info -->

                <hr>
                <!-- others -->
                <div class="text-center">
                  <a class="small" href="/signup">Create an Account!</a>
                </div>
                <!-- end of others -->
              </div>
            </div>
            <!-- End of right part -->

          </div>
        </div>
      </div>
    </div>
    <!-- End of login card -->

  </div>
</div>
<!-- End of main content -->



<script>
  ////////set background color
  window.onload = function () {
    document.body.classList.add('login-bg');
  }
  ////////


  ///////submit
  async function submitForm(oFormElement) {

    var response = await fetch(oFormElement.action, {
      method: oFormElement.method,
      credentials: 'same-origin',
      body: new FormData(oFormElement),
    });

    if (response.ok) {
      var data = await response.json();
      window.location = data.url;
    } else if (response.status == 401) {
      var data = await response.text();
      alert("⚠️ " + data + " ⚠️");
    } else {
      alert("⚠️ " + response.statusText + " ⚠️");
    }

  };
///////
</script>